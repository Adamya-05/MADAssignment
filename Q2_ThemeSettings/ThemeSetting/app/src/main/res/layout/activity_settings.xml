<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background_light"
    android:id="@+id/settingsLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textColor="@color/text_primary_light"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background_light"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textSize="18sp"
                android:textColor="@color/text_primary_light"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/themeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark theme reduces battery usage and helps with eye strain in low light"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light"
                android:layout_marginBottom="16dp"/>

            <Switch
                android:id="@+id/themeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Theme"
                android:textSize="16sp"
                android:textColor="@color/text_primary_light"
                android:minHeight="48dp"
                android:padding="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/currentThemeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current theme: Light"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/text_secondary_light"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_converter"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_blue"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:layout_gravity="center"/>
</LinearLayout> 